@model TicketingSystem.ViewModels.SignInModel

@*@{ Layout = null; }*@

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Sign In</title>
</head>
<body>
    <div class="row justify-content-center m-4">

        <form class="col-4" asp-controller="Auth" asp-action="SignIn" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <input type="text" asp-for="Username" class="form-control" placeholder="Username" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="password" asp-for="Password" class="form-control" placeholder="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <input type="checkbox" asp-for="IsPersistent" class="form-check-input" />
                <label class="form-check-label" asp-for="IsPersistent"> Keep me logged in</label>
            </div>
            <div class="form-group">
                <input type="submit" value="Sign In" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="row justify-content-center m-4">
        <h3>Sign up if you dont have account</h3>
    </div>
    <div class="row justify-content-center m-4">
        <a class="btn btn-success" href="/Auth/SignUp">Sign Up</a>
    </div>
</body>
</html>